<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
   >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions 7"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In which conditon will you buy a new phone?"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textSize="25sp"
        />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the old phone has been used for a year or two.(but it still works)"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:buttonTint="#458B74"
        />
    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the old phone has been used for more than three years.(but it still works)"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:buttonTint="#458B74"
        />
    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the old phone breaks down."
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:buttonTint="#458B74"
        />
    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When a new phone is released."
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:buttonTint="#458B74"
        />
    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:buttonTint="#458B74"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="#458B74"
        android:textColor="#ffffff"
        android:layout_below="@id/checkBox"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

</LinearLayout>