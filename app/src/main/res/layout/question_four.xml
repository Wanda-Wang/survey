<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions 4"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="30sp"
        android:layout_margin="18dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What functions does your phone have now?"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:textSize="25sp"
        />
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="left"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:text="Music functions"
        android:textSize="20sp"
        android:buttonTint="#458B74"/>
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:text="Photo functions"
        android:textSize="20sp"
        android:buttonTint="#458B74"/>
    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:text="Game functions"
        android:textSize="20sp"
        android:buttonTint="#458B74"/>
    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:textSize="20sp"
        android:text="Business functions(Word,Excel,ect.)"
        android:buttonTint="#458B74"/>
    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:text="GPS functions"
        android:textSize="20sp"
        android:buttonTint="#458B74"/>
    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:text="Data functions(Bluetooth,WLAN,etc.)"
        android:buttonTint="#458B74"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:checked="false"
        android:text="Others"
        android:buttonTint="#458B74"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="#458B74"
        android:textColor="#ffffff"
        android:layout_below="@id/checkBox"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>
</LinearLayout>