<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->


    <!-- END    : Your code should be within this block -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="WELCOME TO"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/textView1"
        android:text="TAKE PART IN OUR SURVEY!"
        android:textSize="25sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/textView2"
        android:text="Before we start, here are things you should know:"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView3"
        android:text="-Please be honest when making your choice."
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView4"
        android:text="-We are just doing a research so you don't have to fake your information."
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textView5"
        android:text="-Please follow the step we designed for you an don't skip any questions."
        android:textSize="20sp"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:checked="false"
        android:text="I accept these requests."
        android:buttonTint="#458B74"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LET'S START!"
        android:background="#458B74"
        android:textColor="#ffffff"
        android:layout_below="@id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>


</RelativeLayout>