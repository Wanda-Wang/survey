<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions 2"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="30sp"
        android:layout_margin="18dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much does your phone cost ?"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:textSize="25sp"
        />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Under 1000"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:buttonTint="#458B74"
        android:textSize="20sp"
        />
    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000-1999"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:buttonTint="#458B74"
        android:textSize="20sp"
        />
    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000-2999"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:buttonTint="#458B74"
        android:textSize="20sp"
        />
    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000-3999"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:buttonTint="#458B74"
        android:textSize="20sp"
        />
    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More than 4000"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:buttonTint="#458B74"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="#458B74"
        android:textColor="#ffffff"
        android:layout_below="@id/checkBox"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>
</LinearLayout>